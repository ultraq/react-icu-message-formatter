{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:import/warnings",
		"plugin:react/recommended",
		"ultraq"
	],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2020
	},
	"env": {
		"browser": true,
		"es6": true,
		"jest": true
	},
	"rules": {
		"import/order": [
			"error", {
				"groups": [["sibling", "parent"]],
				"newlines-between": "always"
			}
		]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
