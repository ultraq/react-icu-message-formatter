{
	"name": "@ultraq/react-icu-message-formatter",
	"version": "0.12.0-beta.1",
	"description": "React wrapper for the lightweight ICU message formatter",
	"author": "Emanuel Rabina <emanuelrabina@gmail.com> (http://www.ultraq.net.nz/)",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ultraq/react-icu-message-formatter.git"
	},
	"keywords": [
		"react",
		"icu",
		"message",
		"format",
		"intl",
		"i18n"
	],
	"type": "module",
	"module": "dist/react-icu-message-formatter.js",
	"main": "dist/react-icu-message-formatter.cjs",
	"types": "dist/react-icu-message-formatter.d.ts",
	"exports": {
		"import": {
			"types": "./dist/react-icu-message-formatter.d.ts",
			"default": "./dist/react-icu-message-formatter.js"
		},
		"require": {
			"types": "./dist/react-icu-message-formatter.d.cts",
			"default": "./dist/react-icu-message-formatter.cjs"
		}
	},
	"files": [
		"dist",
		"CHANGELOG.md"
	],
	"sideEffects": false,
	"scripts": {
		"lint": "eslint \"**/*.{js,jsx}\"",
		"test": "vitest run",
		"typecheck": "attw --pack .",
		"build": "npm run build:dist && npm run build:dts",
		"build:dist": "vite build",
		"build:dts": "tsup --entry.react-icu-message-formatter source/IcuMessageFormatter.js --dts-only --format cjs,esm",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"@ultraq/string-utils": "^3.1.0"
	},
	"peerDependencies": {
		"@ultraq/icu-message-formatter": "0.15.0-beta.1",
		"react": "16.8.0 - 18"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.2",
		"@formatjs/intl-locale": "^3.3.2",
		"@formatjs/intl-numberformat": "^8.7.0",
		"@testing-library/jest-dom": "^6.1.3",
		"@testing-library/react": "^14.0.0",
		"@types/react": "^18.2.21",
		"@ultraq/icu-message-formatter": "0.15.0-beta.1",
		"@vitest/coverage-v8": "^2.1.8",
		"cross-env": "^7.0.3",
		"eslint": "^9.17.0",
		"eslint-config-ultraq": "^4.0.0",
		"eslint-plugin-react": "^7.37.2",
		"globals": "^15.14.0",
		"jsdom": "^25.0.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-test-renderer": "^18.2.0",
		"tsup": "^8.3.5",
		"typescript": "^5.2.2",
		"vite": "^6.0.6",
		"vitest": "^2.1.8"
	},
	"engines": {
		"node": ">=18"
	}
}
